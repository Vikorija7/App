@model WorkshopApp.ViewModels.StudentFilterViewModel


@{
    ViewData["Title"] = "Index";
}

<style>
    td,th{
        width:auto;
    }

   
</style>

<h1>Студенти</h1>

<p>
    <a asp-action="Create">Додади студент</a>
</p>

<form asp-controller="Students" asp-action="Index" method="get">
    <p> Индекс: <input type="text" asp-for="SearchIndex">
    Име и презиме: <input type="text" asp-for="SearchFullName" />
    <input type="submit" value="Филтер" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].StudentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].LastName)
            </th>
            <th nowrap="nowrap">
                @Html.DisplayNameFor(model => model.Students[0].EnrollmentDate)
            </th>
            <th nowrap="nowrap">
                @Html.DisplayNameFor(model => model.Students[0].AcquiredCredits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].CurrentSemestar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students[0].EducationLevel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Students) {
        <tr>
            <td> <a asp-controller="Admin" asp-action="StudentView" asp-route-id="@item.Id">Регистрирај</a> </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcquiredCredits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CurrentSemestar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EducationLevel)
            </td>
            <td style="width:100%">
                <a asp-action="CoursesOfStudent" asp-route-id="@item.Id">Предмети</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Промени</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Избриши</a>
            </td>
        </tr>
}
    </tbody>
</table>
