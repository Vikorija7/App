@model WorkshopApp.Models.Student

@{
    ViewData["Title"] = "Edit";
}

<h1>Промени</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                @if (Model.profilePicture == null)
                {
                   <label class="control-label">Слика:</label>
                   <input type="file" name="pictureUrl" /> 
                   }
              else
               {     
            <label>Избрана слика:</label>
            <img src="~/StudentImages/@Model.profilePicture"
            height="100" width="100"
            asp-append-version="true" />
            <br />
            <input type="file" name="pictureUrl" />}
            </div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <input asp-for="StudentId" class="form-control" />
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnrollmentDate" class="control-label"></label>
                <input asp-for="EnrollmentDate" class="form-control" />
                <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AcquiredCredits" class="control-label"></label>
                <input asp-for="AcquiredCredits" class="form-control" />
                <span asp-validation-for="AcquiredCredits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentSemestar" class="control-label"></label>
                <input asp-for="CurrentSemestar" class="form-control" />
                <span asp-validation-for="CurrentSemestar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EducationLevel" class="control-label"></label>
                <input asp-for="EducationLevel" class="form-control" />
                <span asp-validation-for="EducationLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зачувај" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад кон листата</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
