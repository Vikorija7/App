@model WorkshopApp.Areas.Identity.Data.WorkshopAppUser

@{ ViewData["Title"] = "Register"; }


<h3> @ViewData["FullName"]</h3>
<hr />
<div class="row">
    <form asp-action="StudentView" method="post">
        <div class="col-md-12">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group" hidden>
                <input name="StudentId" class="form-control" value="@(Model != null ? Model.StudentId : @ViewData["StudentId"])" hidden />
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Password">Лозинка</label>
                <input name="Password" class="form-control" />
            </div>
            <div class="form-group">
                <label for="PhoneNumber">Телeфонски број</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="@(Model != null && Model.StudentId != null ? "Зачувај" : "Регистрирај")" class="btn btn-secondary" />
            </div>
        </div>
    </form>
</div>
<div>
    <a asp-controller="Student" asp-action="Index">Назад кон листата</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

