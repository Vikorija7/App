@model WorkshopApp.Areas.Identity.Data.WorkshopAppUser

@{ ViewData["Title"] = "Професор"; }


<h3>Наставник: @ViewData["FullName"]</h3>
<hr />
<div class="row">
    <form asp-action="TeacherView" method="post">
        <div class="col-md-12">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group" hidden>
                <input name="TeacherId" class="form-control" value="@(Model != null ? Model.TeacherId : @ViewData["TeacherId"])" hidden />
            </div>
            <div class="form-group">
                <label for="Email">Email адреса</label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label for="Password">Нова лозинка</label>
                <input name="Password" class="form-control" />
            </div>
            <div class="form-group">
                <label for="PhoneNumber">Телефонски број</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="@(Model != null && Model.TeacherId != null ? "Зачувај" : "Внеси нов")" class="btn btn-secondary" />
            </div>
        </div>
    </form>
</div>
<div>
    <a asp-controller="Teachers" asp-action="Index">Назад кон листата</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}